            TextColor="Marine"
            Margin="20"
            FontSize="60"
            FontFamily="fonte.font"
            HorizontalOptions="Center"
            HorizontalTextAligment="Center"
            VerticalOptions="Center"/>
        <VerticalOptions="End"
          Spacing="10"
          Margin="15,0,15,40">

        <Label x:Name="LabelSol"
          IsVisible="false"
          Margin="10,20"
          CornerRadius="20"
          BackgroundColor="Gray"
          HorizontalOptions="Fill"
          VerticalOptions="Fill">


          <Grid>
            <Grid.RowDefinitions>
              <RowDefinition Height="*"/>
              <RowDefinition Height="*"/>
