                Margin="20"
                FontSize="40"
                FontFamily="fonte.font"
                HorizontalOptions="Center"
                HorizontalTextAligment="Center"
                Grid.Row="0"
                Grid.Colunm="0"/>
            <Label x:Name="LabelChuva"
                TextColor="Marine"
                Margin="20"
                FontSize="40"
                FontFamily="fonte.font"
                HorizontalOptions="Center"
                HorizontalTextAligment="Center"
                Grid.Row="0"
                Grid.Colunm="1"/>

          <Grid>
        </Frame>

    <Label x:Name="LabelNublado"
        IsVisible="false"
        Margin="10,20"
        CornerRadius="20"
        BackgroundColor="Gray"
        HorizontalOptions="Fill"
        VerticalOptions="Fill">

    <Grid>
          <Grid.RowDefinitions>
          <RowDefinition Height="90"/>
          <RowDefinition Height="*"/>
         <RowDefinition Height="60"/>
          </Grid.RowDefinitions>
          </Grid.ColunmDefinitions>
     <ColunmDefinition Width="*"/>
       <ColunmDefinition Width="*"/>
       </Grid.ColunmDefinitions>
    <Label Text="Noite"
            TextColor="Marine"
            Margin="20"
            FontSize="40"
            FontFamily="Papyrus"
            HorizontalOptions="Center"
            HorizontalTextAligment="certer"
            Grid.row="0"
            Grid.Colunm="2"/>

            <Label x:Name="LabelNoite"
            CharacterSpacing="1"
            LineHight="1.5"
            TextColor="Marine"
            HorizontalOptions="Center"
            HorizontalTextAligment="Center"
            FontSize="20"
            FontFamily="CachetStBold"
            Grid.Row="1"/>

            </Grid>
            </frame>
            <Grid/> 
            </ContentPage>

        








       


  